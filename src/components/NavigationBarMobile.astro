---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';

import RhizomLogo from "../components/Logo.astro"

// imports all files that end with `.astro' in `./src/pages/post/`
const projects = await Astro.glob('../pages/projects/*.astro')

// Extract projectTitle from each page
const pageTitles = projects.map(page => {
  const { projectTitle } = page;
  return { title: projectTitle, url: page.url };
});

import "../styles/global.css"

---
<nav id="NavBarMobile">

  <div id="logoContainer">
    <RhizomLogo />
  </div>
  

  <input id="input" type="checkbox"></input>


  <div id="Hamburger">

    <span id="anim-span1"></span>
    <span id="anim-span2"></span>
    <span id="anim-span3"></span>
    
  </div>

  <div  id="list">

    <ul>
      <a href="/">Gallery</a>
      <div>&nbsp;&nbsp;</div>
      {pageTitles.map(page => (
          <li><a href={page.url}>{page.title}</a></li>
      ))}
    </ul>  
    

  </div>

  <div id="backdrop"></div>


</nav>

<style>
@import "../styles/global.css";

#logoContainer {
    pointer-events: auto;
    cursor: pointer;
}


#NavBarMobile {
	display: none;

		@media (--bp-mobile) {
			display: block;
		}
}

li {
  list-style: none;
  margin: 0.5rem 0 0.5rem 0; 
}

a {
  text-decoration: none;
  color: inherit;
}

#list {
  position: fixed;
  display: none;
  top: 0;
  left: 0;
  padding-top: 25vh;
  width: 100%;
  height: 100%;
  display: grid;
  justify-items: center;
  z-index: 1000;
  pointer-events: none;
}

input:checked{
  ~ #list{
    display: static;
    z-index: 1000;
    ul {
      visibility: visible;
      opacity: 1;
    }
  }
}

ul {
  font-size: 1.33rem; 
  pointer-events: auto;
  visibility: hidden;
  opacity: 0;
  padding: 0rem;
  transition: opacity 0.78s 0.22s ease, visibility 1s 0.22s;
  z-index: 1001;

  a {
    text-decoration: none;
    color: inherit;
    font-style: normal;
    font-weight: normal;
  }
}

p {
  margin: 0.75rem; 
  margin-left: 0px; 
  margin-top: 0px;
}



#input {
  display: block;
  width: 44px;
  height: 44px;
  position: fixed;
  bottom: 0px;
  right: 10px;
  pointer-events: auto;
  cursor: pointer;
  
  opacity: 0; /* hide this */
  z-index: 1001; /* and place it over the hamburger */
  
  -webkit-touch-callout: none;
}

#Hamburger {
  position: fixed;
  bottom: 10px;
  right: 20px;
  z-index: 999;

  span  {
    display: block;
    width: 21px;
    height: 2px;
    margin-bottom:5px;
    position: relative;
    background: #000000;
    /* transform-origin: 4px 0px; */
  
    transition: transform 1s ease,
                opacity 1s ease;

  }

  #anim-span1{
    transform-origin: 0% 0%;
    transform-origin: 1px 1px;
  }

  #anim-span2{
    opacity: 1;
    transform-origin: 0% 100%;
  }

  #anim-span3{
    transform-origin: 0% 0%;
    transform-origin: 1px 1px;
  }
}


input:checked {
  ~ #Hamburger{
    #anim-span1{
      transform: rotate(45deg);
    }

   #anim-span2{
      opacity: 0;
      transform: rotate(0deg) scale(0.2, 0.2);
    }

    #anim-span3{
      transform: rotate(-45deg);
    }
  }
}

  #backdrop {
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100lvh;
    background-color: rgba(255, 255, 255, 0);
    backdrop-filter: blur(0);
    transition: backdrop-filter 1s ease, background-color 1s ease;
    z-index: 998;
    pointer-events: none;
  }

  input:checked {
    ~ #backdrop {
      display: block;
      background-color: rgba(255, 255, 255, 0.88); /* Example style */
      backdrop-filter: blur(15px);
      pointer-events: auto;
    }
  }



</style>




