---
import type { ImageMetadata } from 'astro';
import { getEntry } from 'astro:content';
import { CldImage } from 'astro-cloudinary';
import { string } from 'astro:schema';
import { getCldImageUrl } from 'astro-cloudinary/helpers';

interface Props {
    src: string;
    datasrc: string;
    width?: number;
    height?: number;
    sizes?: string;
    alt: string;
    loading?: 'eager' | 'lazy';
    
  };
  
// Get component props from Astro.props
const { src, datasrc, width = "100%", height = 'auto', sizes = "100vw", loading = 'lazy', alt = "Joshua Binswanger Scientific Illustration", imagePath, onhover_imagePath, viewtransition_name, project } = Astro.props;

const url = getCldImageUrl({ src: src });
/* const galleryProjectImages = await getEntry('gallery', Astro.props.project + "-gallery"); */
---
<CldImage 
  src=
  data-src={datasrc}   
  width={width}
  height={height}
  sizes={sizes}
  alt={alt}
>   
  

