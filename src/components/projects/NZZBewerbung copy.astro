<script>
  import Lenis from "lenis";
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { CustomEase } from "gsap/CustomEase";
  import { SplitText } from "gsap/SplitText";

  gsap.registerPlugin(ScrollTrigger, CustomEase, SplitText);

  // 1. Initialize Lenis
  const lenis = new Lenis({
    lerp: 0.1,
    wheelMultiplier: 1,
    smoothWheel: true,
  });

  lenis.on("scroll", ScrollTrigger.update);

  gsap.ticker.add((time) => {
    lenis.raf(time * 1000);
  });

  // 2. Master Timeline - increased duration significantly for the volume of content
  const masterTl = gsap.timeline({
    scrollTrigger: {
      trigger: "#scrolly-container",
      start: "top top",
      end: "+=15000%", // Provides enough scrolling length for smooth reading
      scrub: 1,
      pin: true,
      markers: false,
    },
  });

  // 3. Prepare SplitText
  const splitTexts = new SplitText(".text-block", {
    type: "words",
    wordsClass: "word",
  });

  // --- N64 Canvas Setup ---
  const n64Canvas = document.getElementById("n64-canvas") as HTMLCanvasElement;
  const n64Ctx = n64Canvas.getContext("2d");
  const container = document.getElementById("scrolly-container");
  const n64Urls = JSON.parse(container.dataset.n64Images || "[]");
  const n64Images = [];
  const n64Playhead = { frame: 0 };

  // Preload images
  n64Urls.forEach((url) => {
    const img = new window.Image();
    img.src = url;
    n64Images.push(img);
  });

  // Set canvas resolution (adjust to your image aspect ratio, e.g., 800x600)
  n64Canvas.width = 600;
  n64Canvas.height = 600;

  const renderN64 = () => {
    if (n64Images.length === 0) return;
    n64Ctx.clearRect(0, 0, n64Canvas.width, n64Canvas.height);
    // Clamp frame to valid range
    const frame = Math.min(
      Math.max(Math.round(n64Playhead.frame), 0),
      n64Images.length - 1,
    );
    n64Ctx.drawImage(n64Images[frame], 0, 0, n64Canvas.width, n64Canvas.height);
  };

  // Override initial CSS to make parents visible, but hide the individual words
  gsap.set(".text-block", { opacity: 1, y: 0 });
  gsap.set(splitTexts.words, { opacity: 0, y: 20 });

  // Helper Functions to keep the timeline clean
  const showText = (selector, sync = false) => {
    return masterTl.to(
      `${selector} .word`, // Target the individual words inside the selector
      { opacity: 1, y: 0, duration: 0.8, stagger: 0.04, ease: "power2.out" },
      sync ? "<" : "+=0.2",
    );
  };
  const hideText = (selector, sync = false) => {
    return masterTl.to(
      selector,
      { opacity: 0, y: -20, duration: 1 },
      sync ? "<" : "+=0.2",
    );
  };

  const fadeCollapseText = (selector, sync = false) => {
    return masterTl.to(
      selector,
      {
        opacity: 0,
        y: -20,
        height: 0,
        duration: 1,
        ease: "power2.inOut",
      },
      sync ? "<" : "+=0.2",
    );
  };

  const showImg = (selector, sync = false) => {
    // Create a localized mini-timeline for this specific image
    const imageTl = gsap.timeline();

    imageTl
      .to(selector, {
        y: "0%",
        duration: 1,
      })
      .to(
        selector,
        {
          opacity: 1,
          duration: 0.8,
        },
        ">-0.8",
      ); // Starts 0.2s before the 1s movement ends

    // Add the mini-timeline to your masterTl
    return masterTl.add(imageTl, sync ? "<" : "-=0.2");
  };

  const zoomFadeOutImg = (selector, sync = false) => {
    return masterTl.fromTo(
      selector,
      {
        y: "0%", // Overrides the initial translateY(100%) from your CSS
        scale: 1, // Starts scaled down at 60% size. (Use 1.2 to start zoomed IN)
      },
      {
        scale: 0.6, // Animates to its natural size
        opacity: 0,
        duration: 1.2,
        ease: "back.out(1.2)", // Gives a very subtle, satisfying "pop" into place
      },
      sync ? "<" : "+=0.2",
    );
  };

  const zoomFadeInImg = (selector, sync = false) => {
    return masterTl.fromTo(
      selector,
      {
        y: "0%", // Overrides the initial translateY(100%) from your CSS
        opacity: 0,
        scale: 1.4,
      },
      {
        opacity: 1,
        duration: 1.2,
        scale: 1,
        ease: "power2.out",
      },
      sync ? "<" : "-=0.5",
    );
  };

  const hideImg = (selector, sync = false) => {
    return masterTl.to(
      selector,
      {
        y: "-100%",
        opacity: 0,
        duration: 1,
      },
      sync ? "<" : "+=0.2",
    );
  };
  const pause = (duration = 0.2) => {
    return masterTl.to({}, { duration: duration });
  };

  // --- PANEL 1: Intro ---
  // Introduction with Name and Passion
  masterTl.set("#panel-1", { opacity: 1 });
  showText(".text-intro-name");
  showText(".text-intro-passion");
  masterTl.to("#panel-1 .text-block", {
    y: "-50vh",
    opacity: 0,
    duration: 1.5,
    stagger: 0.1,
  });
  masterTl.to("#panel-1", { opacity: 0, duration: 0.5 }, "<1"); // Fade panel out at the end

  // --- PANEL 2: Mission ---
  // Background, Claim, and Narrative with supporting images
  masterTl.to("#panel-2", { opacity: 1, duration: 1 });

  showImg(".img-mission-pheno", true);
  showText(".text-mission-background");
  pause();
  showText(".text-mission-claim", true);
  hideImg(".img-mission-pheno");
  showImg(".img-mission-eth1");
  zoomFadeOutImg(".img-mission-eth1");
  zoomFadeInImg(".img-mission-eth2");
  pause();
  zoomFadeOutImg(".img-mission-eth2");
  fadeCollapseText(".text-mission-background", true);
  fadeCollapseText(".text-mission-claim", true);

  showImg(".img-mission-microbiome-olma", true);
  showText(".text-mission-narrative", true);
  showImg(".img-mission-microbiome-olma", true);
  pause();
  zoomFadeOutImg(".img-mission-microbiome-olma");
  zoomFadeInImg(".img-mission-microbiome-gallery");
  pause();
  hideImg(".img-mission-microbiome-gallery");

  showText(".text-mission-audience", true);
  pause();
  showImg(".img-mission-freedom-gallery", true);
  hideImg(".img-mission-freedom-gallery");
  showImg(".img-mission-freedom-info");
  pause(1);

  hideImg(".img-mission-freedom-info");
  // Move all texts in this panel up and out of the viewport smoothly
  masterTl.to(
    "#panel-2 .text-block",
    { y: "-100vh", opacity: 0, duration: 1.5, stagger: 0.1 },
    "<",
  );
  masterTl.to("#panel-2", { opacity: 0, duration: 0.5 }, "<1");

  // --- PANEL 3: Werkzeuge ---
  // Tools: 3D, Stills, Animation, Interactive, Illustration
  masterTl.to("#panel-3", { opacity: 1, duration: 1 });

  showText(".text-tools-3d");
  showImg(".img-tools-wood5", true);
  pause();
  showText(".text-tools-still", true);
  zoomFadeOutImg(".img-tools-wood5");
  zoomFadeInImg(".img-tools-wood4");
  pause();
  zoomFadeOutImg(".img-tools-wood4");
  zoomFadeInImg(".img-tools-eth3");
  pause();
  zoomFadeOutImg(".img-tools-eth3");
  zoomFadeInImg(".img-tools-eth1");
  pause();
  hideImg(".img-tools-eth1");

  showText(".text-tools-anim", true);
  showImg(".img-tools-n64", true);

  // Animate N64 Sequence (Scrubbing)
  masterTl.to(n64Playhead, {
    frame: (n64Images.length || 1) - 1,
    snap: "frame",
    ease: "none",
    onUpdate: renderN64,
    duration: 3, // Adjust duration to control how long the scroll sequence lasts
  });

  hideImg(".img-tools-n64");
  showText(".text-tools-interactive", true);
  showImg(".img-tools-xylopedia-ipad");
  pause();
  hideImg(".img-tools-xylopedia-ipad");
  showImg(".img-tools-xylopedia-gallery");
  pause();
  hideImg(".img-tools-xylopedia-gallery");

  showText(".text-tools-illustration", true);
  showImg(".img-tools-illu1", true);
  pause();
  hideImg(".img-tools-illu1");
  showImg(".img-tools-illu6");
  pause();
  hideImg(".img-tools-illu6");
  showImg(".img-tools-borken");
  pause();
  hideImg(".img-tools-borken");
  showImg(".img-tools-figure");
  pause(1);

  hideImg(".img-tools-figure");
  masterTl.to(
    "#panel-3 .text-block",
    { y: "-100vh", opacity: 0, duration: 1.5, stagger: 0.1 },
    "<",
  );
  masterTl.to("#panel-3", { opacity: 0, duration: 0.5 }, "<1");

  // --- PANEL 4: Tech ---
  // Technical Skills: Augmedi, Houdini, Python, AI
  masterTl.to("#panel-4", { opacity: 1, duration: 1 });
  showText(".text-tech-intro");
  showText(".text-tech-augmedi");
  showText(".text-tech-ai");
  pause(1.5);
  masterTl.to("#panel-4 .text-block", {
    y: "-100vh",
    opacity: 0,
    duration: 1.5,
    stagger: 0.1,
  });
  masterTl.to("#panel-4", { opacity: 0, duration: 0.5 }, "<1");

  // --- PANEL 5: Web ---
  // Web Skills: Portfolio, UB Jahresbericht
  masterTl.to("#panel-5", { opacity: 1, duration: 1 });

  showText(".text-web-intro");
  showImg(".img-web-ub", true);
  pause();
  hideImg(".img-web-ub");

  showText(".text-web-portfolio", true);
  showImg(".img-web-portfolio", true);
  pause(1);

  hideImg(".img-web-portfolio");
  masterTl.to(
    "#panel-5 .text-block",
    { y: "-100vh", opacity: 0, duration: 1.5, stagger: 0.1 },
    "<",
  );
  masterTl.to("#panel-5", { opacity: 0, duration: 0.5 }, "<1");

  // --- PANEL 6: Pitch ---
  // Motivation for NZZ
  masterTl.to("#panel-6", { opacity: 1, duration: 1 });
  showText(".text-pitch-nzz");
  showText(".text-pitch-skills");
  showText(".text-pitch-motivation");
  pause(1.5);
  masterTl.to("#panel-6 .text-block", {
    y: "-100vh",
    opacity: 0,
    duration: 1.5,
    stagger: 0.1,
  });
  masterTl.to("#panel-6", { opacity: 0, duration: 0.5 }, "<1");

  // --- PANEL 7: Outro ---
  // Contact and Thanks
  masterTl.to("#panel-7", { opacity: 1, duration: 1 });
