---
interface Props {
 strokewidth?: string;
 strokecolor?: string;
}

const { strokewidth = "1px", strokecolor = "black" } = Astro.props;
---


<div class:list={["svg-container"]}>
    <svg xmlns="http://www.w3.org/2000/svg"    viewBox="0 -16 200 16" preserveAspectRatio="xMidYMid">
        <path 
        vector-effect="non-scaling-stroke"
        d="M 1 -15 V -1 H 199 V -15"/>
    </svg>
</div>


<style define:vars={{strokewidth, strokecolor}}>

/* SVG container */
.svg-container {
    display: grid;
    grid-template-columns: 1fr; /* One column spanning the full width */
    grid-template-rows: 1fr;    /* One row spanning the full height */
    justify-items: center;         /* Aligns the SVG to the right */
    align-items: end;  
    justify-content: center;     
    align-content: end;     /* Centers the SVG vertically */        
    height: 100%;  
    }

/* SVG styling */
svg {
    overflow: visible;
    width: 100%;
    display: block; /* Removes inline spacing */
}

/* Keep stroke width constant */
path {
    fill: none;
    stroke: var(--strokecolor);
    stroke-width: var(--strokewidth);
}
</style>