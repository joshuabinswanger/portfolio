---
interface Props {
 strokewidth?: string;
 strokecolor?: string;
 height?: string;
 width?: string;
 overflow?: string;
}

const { strokewidth = "1px", strokecolor = "black", height = "100%", width = "100%", overflow = "visible" } = Astro.props;
---


<div class:list={["svg-container bracket-close-v"]}>
    <svg xmlns="http://www.w3.org/2000/svg"    viewBox="0 -16 200 16" preserveAspectRatio="xMidYMid">
        <path 
        vector-effect="non-scaling-stroke"
        d="M 1 -15 V -1 H 199 V -15"/>
    </svg>
</div>


<style define:vars={{strokewidth, strokecolor, height, width, overflow}}>

/* SVG container */
.svg-container {
    overflow: var(--overflow);
    height: var(--height);        /* Centers the SVG vertically */        
    width: var(--width); 
    display: grid;
    align-items: end;  
    align-content: end;     /* Centers the SVG vertically */        
    }

/* SVG styling */
svg {
    overflow: var(--overflow);
    width: 100%;
    align-items: end;  
    align-content: end;  
}

/* Keep stroke width constant */
path {
    fill: none;
    stroke: var(--strokecolor);
    stroke-width: var(--strokewidth);
}
</style>