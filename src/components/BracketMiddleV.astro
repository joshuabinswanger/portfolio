---
interface Props {
 strokewidth?: string;
 strokecolor?: string;
}

const { strokewidth = "1px", strokecolor = "black" } = Astro.props;
---


<div class:list={["svg-container bracket-middle-v"]}>
    <svg xmlns="http://www.w3.org/2000/svg"    viewBox="0 -15 200 30" preserveAspectRatio="xMidYMid">
        <path 
        vector-effect="non-scaling-stroke"
        d="M 1 -14 V 14 M 1 0 H 199 M 199 -14 V 14"/>
    </svg>
</div>

<style define:vars={{strokewidth, strokecolor}}>
/* SVG container */

.svg-container {
    display: grid;
    grid-template-columns: 1fr; /* One column spanning the full width */
    grid-template-rows: 1fr;  
    align-content: center;
    height: 100%; 
    }

/* SVG styling */
svg {
    overflow: visible;
    width: 100%;
    height:  auto;
    display: block; /* Removes inline spacing */
}

/* Keep stroke width constant */
path {
    fill: none;
    stroke: var(--strokecolor);
    stroke-width: var(--strokewidth);
}
</style>