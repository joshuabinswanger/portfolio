---
import ImageElement from "../../../components/ImageElement.astro"
import GalleryElement from "../../../components/GalleryElement.astro"

const totalImages = 4;

---
<GalleryElement totalImages={totalImages} title="SLF Phenological Shift" subtitle="Scientific Poster Illustration">

<!-- Images -->

<Fragment slot="Image1"> 
    <ImageElement 
    loading="eager"
    altText="Visualisation of Bacteria in a clay material"
    imagePath="/src/assets/projects/phenologicalshift/Phenological Shift_GalleryImage_1.webp"
    />
</Fragment>

<Fragment slot="Image2"> 
    <ImageElement  
    altText="Bacteria with a cellulose hair"
    imagePath="/src/assets/projects/phenologicalshift/Phenological Shift_GalleryImage_2.webp"
    />
</Fragment>

<Fragment slot="Image3"> 
    <ImageElement 
    altText="process of 3d printing a material with fungi inside"
    imagePath="/src/assets/projects/phenologicalshift/Phenological Shift_GalleryImage_3.webp"
/>
</Fragment>

<Fragment slot="Image4"> 
    <ImageElement 
    altText="process of 3d printing a material with fungi inside"
    imagePath="/src/assets/projects/phenologicalshift/Phenological Shift_GalleryImage_4.webp"
/>
</Fragment>

</GalleryElement>
